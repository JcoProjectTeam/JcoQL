CREATE FUZZY EVALUATOR pNormSimilarityFE
	PARAMETERS 
		p			TYPE NUMERIC,
		weights		TYPE ARRAY,
		memberships	TYPE ARRAY 
	PRECONDITION 	p >= 1 
			AND		COUNT (memberships) = COUNT (weights)
	FOR ALL 		m IN memberships
		LOCALLY 	(1 -  m)^(p) AS x,
							weights[POS]^p AS w
		AGGREGATE 	w*x AS numeratore,
							w AS denominatore
	EVALUATE 		(numeratore / denominatore)^(1/p);